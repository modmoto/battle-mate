<div class="d-flex mb-2 flex-row">
  @if (Right)
  {
    <span class="pt-4 middle-float-text">@Topic</span>
    <div class="col text-start">@Input</div>
  }
  
  <div class="col w-25">
    <button class="btn btn-outline-danger w-100" @onclick="async () => await InvokeChange.InvokeAsync(--Input)">
      -
    </button>
  </div>
  <div class="col w-25 ps-2">
    <button class="btn btn-outline-success w-100" @onclick="async () => await InvokeChange.InvokeAsync(++Input)">
      +
    </button>
  </div>
  @if (!Right)
  {
    <div class="col text-end">@Input</div>
  }
</div>

@code {
  [Parameter]
  public bool Right { get; set; }
  [Parameter]
  public string Topic { get; set; }
  [Parameter]
  public int Input { get; set; }
  [Parameter]
  public EventCallback<int> InvokeChange { get; set; }
}