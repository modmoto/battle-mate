<div class="mb-2">
  @if (Index != 0)
  {
    <button type="button" class="btn btn-success w-100" @onclick="() => InvokeChange.InvokeAsync(Next())">
      @Values[Index].Text
    </button>
  }
  else
  {
    <button type="button" class="btn btn-outline-secondary w-100" @onclick="() => InvokeChange.InvokeAsync(Next())">
      @Values[Index].Text
    </button>  
  }
</div>

@code {
  [Parameter]
  public int Index { get; set; }
  [Parameter]
  public List<PointStrings> Values { get; set; }
  [Parameter]
  public EventCallback<int> InvokeChange { get; set; }

  private int Next()
  {
    return (Index + 1) % Values.Count;
  }
}